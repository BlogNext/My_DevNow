---
import Footer from "@components/footer.astro";
import "@fontsource/inter/vietnamese.css";
import { checkImageUrl } from "@utils/all";
import { SEO } from "astro-seo";

interface Props {
	title: string;
	desc?: string;
  ogimage?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const { title, desc, ogimage = "/opengraph.jpg" } = Astro.props;

const resolvedOGImage = checkImageUrl(ogimage, Astro.site);

const makeTitle = title
  ? title + " | " + "DevNow"
  : "DevNow â€” Free Blog Website Template built with Astro & MDX";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<SEO
      title={makeTitle}
      description={desc ||
        "DevNow is a Blog Starter Template built with Astro & MDX."}
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `DevNow - Blog Starter Template for Astro`,
          image: resolvedOGImage,
        },
        image: {
          alt: "DevNow Screenshot",
        },
      }}
    />
	</head>
	<body>
		<slot />
		<Footer  />
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>
